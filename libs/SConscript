Import('env')
dirs = [
    'arduino',
    'SPI',
    'AGC',
    'FHT',
    'Wire',
    'TimerOne',
    'SoftwareSerial',
    'devices',
    'elshield',
    'Adafruit_MotorShield',
    'AccelStepper',
    'neopixel',
    ]
libs = dict()
incs = dict()
for dir_ in dirs:
    script = dir_+'/SConscript'
    libs[dir_] = SConscript(script, exports=['env', 'libs', 'incs'])
    incs[dir_] = Dir(dir_)
Return('libs', 'incs')
